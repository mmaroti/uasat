<project>
    <target name="clean">
        <delete includeEmptyDirs="true">
			<fileset dir="bin" includes="**/*"/>
		</delete>
		<delete file="uasat.jar"/>
    </target>

	<path id="jars">
		<fileset dir="" includes="lib/*.jar"/>
		<pathelement path="bin"/>
	</path>
    <target name="build">
        <mkdir dir="bin"/>
        <javac srcdir="src" destdir="bin" classpathref="jars" includeantruntime="false"/>
    </target>

    <target name="jar" depends="build">
		<manifestclasspath property="jarcp" jarfile="uasat.jar">
			<classpath refid="jars"/>
		</manifestclasspath>	
        <jar destfile="uasat.jar" includes="" compress="true" update="true">
			<fileset dir="" includes="src/**/*"/>
			<fileset dir="" includes="lib/*.jar"/>
			<fileset dir="" includes="bin/**/*.class"/>
			<fileset file="LICENSE"/>
			<fileset file="README.md"/>
            <manifest>
				<attribute name="Main-Class" value="org.uasat.math.Validation"/>
				<attribute name="Class-Path" value="${jarcp}"/>
            </manifest>
        </jar>
    </target>
</project>
